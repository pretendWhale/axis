option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: axis/axis/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: axis.settings



packages:
  yum:
    git: []
    libxml2: []
    libxslt: []
    libxml2-devel: []
    libxslt-devel: []
    postgresql104-devel: []
    libcurl-devel: []
    gcc: []
    gcc-c++: []

container_commands:
  01_upgrade_pip_global:
    command: "pip install --upgrade pip"
  02_upgrade_pip_for_venv:
    command: "sudo /opt/python/run/venv/bin/pip install --upgrade pip"
  03_static:
    command: "django-admin.py collectstatic --noinput"
    leader_only: true
  04_migrate:
    command: "django-admin.py migrate"
    leader_only: true
#  02a_migrate_celery:
#    command: "django-admin.py migrate django_celery_results"
#    leader_only: true
#  05_loaddata:
#    command: "django-admin.py loaddata policy environment"
#    leader_only: true
  06wsgipass:
    command: "if ! grep -q 'WSGIPassAuthorization On' ../wsgi.conf ; then echo 'WSGIPassAuthorization On' >> ../wsgi.conf; fi;"